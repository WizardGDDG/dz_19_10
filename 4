
#include <string>
#include <iostream>

using namespace std;

int main()
{
    setlocale(LC_ALL, "rus");
	int orel = 0;
	int vibor;
	int reshka = 0;
	int oshibka = 1;
	
	for (int i = 0; i < 9 ; i++)
	{
		cout << "Выбирите 1 или 0: ";
		cin >> vibor;
		switch (vibor)
		{
		case 1:
			orel++;
			break;
		case 0:
			reshka++;
			break;
		default:
			cout << "Нельзя так" << endl;
			oshibka++;
		}
		if (oshibka > 3)
		{
			i = 9;
		}
	}
	if (orel > reshka)
	{
		cout << "Положительно";
	}
	else
	{
		cout << "Отрицательно";
	}
}
