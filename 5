#include <iomanip>
#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "rus");
	int days_per_month = 0;
	int month;
	int day_of_week = 0;
	int day = 1;
	cout << "Введите номер месяца: ";
	cin >> month;
	cout << "Введите день недели откудо считать: ";
	cin >> day_of_week;

	switch (month)
	{
	case 1:
		days_per_month = 31;
		break;
	case 2:
		days_per_month = 28;
		break;
	case 3:
		days_per_month = 31;
		break;
	case 4:
		days_per_month = 30;
		break;
	case 5:
		days_per_month = 31;
		break;
	case 6:
		days_per_month = 30;
		break;
	case 7:
		days_per_month = 31;
		break;
	case 8:
		days_per_month = 31;
		break;
	case 9:
		days_per_month = 30;
		break;
	case 10:
		days_per_month = 31;
		break;
	case 11:
		days_per_month = 30;
		break;
	case 12:
		days_per_month = 31;
		break;
	}
	
	cout << "     " << "Mo    Tu    We    Th    Fr    Sa    Su " << endl;
	for (int i = 1; i < day_of_week; i++)
	{
		cout << setw(6) << "_";
		
	
	}
	for (int i = day_of_week; i < days_per_month; i++)
	{
		cout << setw(6) << day++;
		if (i % 7 == 0)
		{
			cout << endl;
		}
		
	}
}


